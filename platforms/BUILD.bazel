package(default_visibility = ["//visibility:public"])

exec_windows_properties = {
    "OSFamily": "windows",
}

platform(
    name = "windows_x64",
    constraint_values = [
        "@platforms//cpu:x86_64",
        "@platforms//os:windows",
    ],
    exec_properties = exec_windows_properties,
)

platform(
    name = "windows_x86",
    constraint_values = [
        "@platforms//cpu:x86_32",
        "@platforms//os:windows",
    ],
    exec_properties = exec_windows_properties,
)
